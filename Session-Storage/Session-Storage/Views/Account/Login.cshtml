@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h1 class="text-center">Login</h1>
    <div class="error-msg text-danger">
        @ViewBag.error
    </div>
    <form method="post" asp-action="Login">
        <div class="form-group mt-2">
            <input class="form-control" placeholder="Enter email" asp-for="Email">
        </div>
        <div class="form-group mt-2">
            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
        </div>
        <button type="submit" class="btn btn-primary d-block mt-3" style="margin:0 auto;width:125px">Login</button>
    </form>
</div>